{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "path",
          "style": "plain",
          "foreground": "#7E46B6",
          "template": "{{ .Path }} ",
          "properties": {
            "style": "mixed",
            "max_depth": 3,
            "mixed_threshold": 6
          }
        },
        {
          "type": "node",
          "powerline_symbol": "\uE0B0",
          "foreground": "#ffffff",
          "background": "#D75F00",
          "template": "\uE718 {{ .Major }}",
          "style": "diamond",
          "leading_diamond": "\ue0b6",
          "trailing_diamond": "\ue0b4 "
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "#5FD7FF",
          "template": "{{ .HEAD }}{{ if .Staging.Changed }}<#87FF00> \u25cf {{ .Staging.String }}</>{{ end }}{{ if .Working.Changed }}<#D75F00> \u25cf {{ .Working.String }}</>{{ end }} ",
          "properties": {
            "branch_ahead_icon": "",
            "branch_behind_icon": "",
            "branch_gone_icon": "",
            "branch_icon": "",
            "branch_identical_icon": "",
            "cherry_pick_icon": "",
            "commit_icon": "",
            "fetch_status": true,
            "merge_icon": "",
            "rebase_icon": "",
            "revert_icon": "",
            "tag_icon": ""
          }
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "#ffffff",
          "template": "üêß"
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "#D75F00",
          "template": "{{ if eq .Code 0 }}<#7E46B6>Œª </>{{ else }}Œª {{ end }}"
        }
      ]
    },
    {
      "type": "rprompt",
      "segments": [
        {
          "background": "#575656",
          "foreground": "#d6deeb",
          "properties": {
            "style": "roundrock",
            "threshold": 0
          },
          "template": " {{ .FormattedMs }} ",
          "type": "executiontime",
          "style": "diamond",
          "leading_diamond": "\ue0b6",
          "trailing_diamond": "\ue0b4 "
        }
      ]
    }
  ],
  "secondary_prompt": {
    "background": "transparent",
    "foreground": "#ffffff",
    "template": "üêß "
  },
  "transient_prompt": {
    "background": "transparent",
    "foreground": "#ffffff",
    "template": "üêß "
  }
}
